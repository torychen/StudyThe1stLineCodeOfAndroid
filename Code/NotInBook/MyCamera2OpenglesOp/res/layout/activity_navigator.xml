<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jarry.NavigatorActivity">

    <Button
        android:id="@+id/button_texture_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextureViewMedia"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/button_glsurfaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GLSurfaceViewMedia"
        android:layout_below="@+id/button_texture_view"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/button_glsurface_view_native"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GLSurfaceViewNativeMedia"
        android:layout_below="@+id/button_glsurfaceview"
        android:layout_marginTop="25dp"/>
</RelativeLayout>
